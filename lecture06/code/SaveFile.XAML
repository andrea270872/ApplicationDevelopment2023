<Window x:Class="SaveFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveFile"
        mc:Ignorable="d"
        Title="Save Text to a File" Height="450" Width="800">
    <Grid>
        <Button x:Name="theSaveBTN" Content="Save" HorizontalAlignment="Left" Margin="68,307,0,0" VerticalAlignment="Top" 
                RenderTransformOrigin="0.449,0.547" Click="theSaveBTN_Click" />
        <TextBox x:Name="myText" HorizontalAlignment="Left" Margin="68,25,0,0" TextWrapping="Wrap" Text="Type something here ..." VerticalAlignment="Top" Width="586" Height="277" AcceptsReturn="True"/>
        <Button x:Name="loadBtn" Content="Load" HorizontalAlignment="Left" Margin="624,307,0,0" 
                VerticalAlignment="Top" Click="loadBtn_Click" />

    </Grid>
</Window>
