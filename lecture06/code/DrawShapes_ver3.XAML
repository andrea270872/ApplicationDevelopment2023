<Window x:Class="DrawingShapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingShapes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="573*">

            </ColumnDefinition>
            <ColumnDefinition Width="227*">

            </ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Button x:Name="addButton" Grid.Column="1" Content="Add random shape" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Height="130" Width="227" Click="addButton_Click"/>
        <Canvas x:Name="myCanvas" Background="#FFE6E6FF"/>
        <Button x:Name="clearButton" Grid.Column="1" Content="Clear shapes" HorizontalAlignment="Center" 
                VerticalAlignment="Center" Height="130" Width="227" Click="clearButton_Click"/>

    </Grid>
</Window>
